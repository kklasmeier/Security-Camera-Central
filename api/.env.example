# Environment variables for Security Camera Central Server API
# Copy this file to .env and fill in your actual values

# Database Configuration
# Format: mysql+pymysql://username:password@host/database
DATABASE_URL=mysql+pymysql://securitycam:YOUR_PASSWORD_HERE@localhost/security_cameras
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# CORS Origins (comma-separated list of allowed origins)
# Add your central server's IP address here
CORS_ORIGINS=["http://localhost", "http://192.168.1.100"]

# Logging
LOG_LEVEL=INFO
